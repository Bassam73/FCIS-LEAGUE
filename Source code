	int TeamAwayGoals;
};

struct Matches
{
	int ID[190] = { 0 };
	string TeamHome[190];
	string TeamAway[190];
	int Time[190] = { 0 };
	int Results[190][2] = { 0 };
};

struct League
{
	Team team[20];
	Matches matches[190];
	// Table Struct //
} FCIS;


