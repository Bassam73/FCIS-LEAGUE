        break;
    }
}
void ADMIN()
{
    int AloginorAregister;
    cout << " ----------------- main menu ------------------\n";
    cout << "choose 1 or 2 \n";
    cout << "1- register \n";
    cout << "2- login  \n";
    cin >> AloginorAregister;
    switch (AloginorAregister)
    {
    case 1:
        Aregister();
        break;
    case 2:
        Alogin();
        break;
    default:
        system("cls");
        cout << "Please select 1 or 2" << endl;
        ADMIN();
        break;
    }
}

