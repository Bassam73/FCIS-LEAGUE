void addTeams() 
{
    cout << "Please enter the names of the " << NUM_TEAMS << " teams:" << endl;
    for (int i = 0; i < NUM_TEAMS; i++) {
        cout << "Team " << i + 1 << ": ";
        cin >> teams[i];
    }
    ofstream Teams;
    Teams.open("Teams.txt");
    for (int i = 0; i < NUM_TEAMS; i++)
    {
        Teams << teams[i] << endl;
    }
    Teams.close();

    cout << "The " << NUM_TEAMS << " teams have been added." << endl;
}
